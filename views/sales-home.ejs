<!DOCTYPE html>
<html>
<head>
  <title>売上・在庫管理</title>
  <style>
    table, th, td {
      border: 1px solid black;
      border-collapse: collapse;
      padding: 8px;
    }
    th {
      background-color: #ddd;
    }
    .button-container {
      margin-bottom: 20px;
    }
    .blue-button {
      background-color: #007bff;
      color: white;
      border: none;
      padding: 6px 12px;
      border-radius: 5px;
      cursor: pointer;
      margin: 5px;
    }
    .blue-button:hover {
      background-color: #0056b3;
    }
    .red-button {
      background-color: #dc3545;
      color: white;
      border: none;
      padding: 6px 12px;
      border-radius: 5px;
      cursor: pointer;
      margin: 5px;
    }
    .red-button:hover {
      background-color: #a71d2a;
    }
  </style>
</head>
<body>
  <h1>売上管理</h1>

  <div class="button-container">
  <% items.forEach((item, index) => { %>
    <div style="margin-bottom: 10px;">
      <form action="/sell" method="POST" style="display:inline;">
        <input type="hidden" name="index" value="<%= index %>">
        <button type="submit" class="blue-button"><%= item.name %> 売る</button>
      </form>

      <form action="/delete-sale" method="POST" style="display:inline;" onsubmit="return confirmCancel(this);">
        <input type="hidden" name="index" value="<%= index %>">
        <button type="submit" class="red-button"><%= item.name %> 取り消し</button>
      </form>
    </div>
  <% }) %>
</div>

  <h2>売上一覧</h2>
  <table>
    <thead>
      <tr>
        <th>商品名</th>
        <th>価格</th>
        <th>在庫</th>
        <th>売れた数</th>
        <th>売上金額</th>
      </tr>
    </thead>
    <tbody>
      <% items.forEach(item => { %>
        <tr>
          <td><%= item.name %></td>
          <td><%= item.price %> 円</td>
          <td><%= item.stock %></td>
          <td><%= item.sold %></td>
          <td><%= item.price * item.sold %> 円</td>
        </tr>
      <% }) %>
    </tbody>
  </table>
  <audio id="alert-sound" src="/sounds/warning.mp3" preload="auto"></audio>

  <script>
    function confirmCancel(form) {
      const audio = document.getElementById('alert-sound');
      audio.play(); // 警告音を再生

      return confirm('本当に取り消しますか？');
    }
  </script>
</body>
</html>